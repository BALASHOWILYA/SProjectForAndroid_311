<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for light mode. -->
    <style name="LightTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF4081</item>
        <item name="colorPrimaryDark">#F50057</item>
        <item name="colorAccent">#FF4081</item>

        <!-- Text settings. -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textSize">16sp</item>

        <!-- Button style -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>



    <!-- Custom button style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/buttonBackgroundLight</item>
        <item name="android:textColor">@color/buttonTextColorLight</item>
    </style>

    <!-- Application Themes -->
    <style name="Theme.ProjecctForAndroidLessons" parent="LightTheme" />
    <style name="Theme.ProjecctForAndroidLessons.Dark" parent="DarkTheme" />
</resources>


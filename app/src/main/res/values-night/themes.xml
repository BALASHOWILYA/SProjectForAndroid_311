    <!-- styles.xml -->
    <style name="DarkTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Define your dark theme attributes here -->
        <item name="colorPrimary">#7C4DFF</item>
        <item name="colorPrimaryDark">#512DA8</item>

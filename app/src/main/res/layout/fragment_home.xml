<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img"
        android:layout_gravity="center"/>



    <Button
        android:id="@+id/blink_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show blink"/>

    <Button
        android:id="@+id/rotate_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show rotate"/>

    <Button
        android:id="@+id/move_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show move"/>

    <Button
        android:id="@+id/zoom_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show zoom"/>

    <Button
        android:id="@+id/fade_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show fade"/>

    <Button
        android:id="@+id/slide_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show slide "/>






</LinearLayout>